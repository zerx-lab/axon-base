{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "convex": {
      "type": "local",
      "command": ["npx", "-y", "convex@latest", "mcp", "start"]
    },
    "supabase": {
      "type": "remote",
      "url": "http://localhost:8000/mcp"
    },
    "next-devtools": {
      "type": "local",
      "command": ["bunx", "-y", "next-devtools-mcp@latest"]
    },
    "assistant-ui": {
      "type": "local",
      "command": ["npx", "-y", "@assistant-ui/mcp-docs-server"]
    }
  }
}
